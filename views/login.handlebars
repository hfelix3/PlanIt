<h2>Login</h2>
<form class="form login-form">
  <div class="form-group">
    <label for="email-login">email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">login</button>
  </div>
</form>

<h2>Register</h2>
<form class="form register-form">
  <div class="form-group">
    <label for="name-register">Name:</label>
    <input class="form-input" type="text" id="name-register" />
  </div>
  <div class="form-group">
    <label for="email-register">email:</label>
    <input class="form-input" type="text" id="email-register" />
  </div>
  <div class="form-group">
    <label for="password-register">password:</label>
    <input class="form-input" type="password" id="password-register" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Register</button>
  </div>
</form>

<script src="/js/login.js"></script>
<script src="/js/register.js"></script>